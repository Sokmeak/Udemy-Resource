<%- include('partials/header') %>
<h1>Edit Book</h1>
<form action="/books/update/<%= book.id %>" method="POST">
  <label for="title">Title:</label>
  <input
    type="text"
    name="title"
    id="title"
    value="<%= book.title %>"
    required /><br />

  <label for="author">Author:</label>
  <input
    type="text"
    name="author"
    id="author"
    value="<%= book.author %>"
    required /><br />

  <label for="rating">Rating:</label>
  <input
    type="number"
    name="rating"
    id="rating"
    value="<%= book.rating %>"
    required /><br />

  <label for="review">Review:</label>
  <textarea name="review" id="review" required><%= book.review %></textarea
  ><br />

  <button type="submit">Update Book</button>
</form>
<%- include('partials/footer') %>
